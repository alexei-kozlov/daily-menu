<h1 class="text-center text-uppercase mb-0" style="font-family: Pacifico;">- Меню -</h1>
<div class="mb-4 container d-flex flex-wrap flex-column justify-content-between align-items-start">
  <h2 class="h4 mx-auto align-self-center mb-4"><%= l @menu.date %></h3>
  <ul class="mx-auto pl-0">
    <% @menu.daily_menu_items.each do |item| %>
      <li class="category-list">
        <h3><%= link_to item.menu_item.category.title, category_path(item.menu_item.category),
        :class => 'text-secondary' %></h3>
        <ul class="mx-auto pl-0 pb-4">
          <li class="dish-list">
            <%= link_to item.menu_item.title, menu_item_path(item.menu_item),
            :class => 'text-dark' %> - <%= item.price %> грн /
            за <%= item.menu_item.volume %> <%= item.menu_item.unit.unit_desc %>
          </li>
        </ul>
      </li>
    <% end %>
  </ul>
</div>
<div class="mx-auto text-right col-10 pr-0">
  <%= link_to "Назад", home_path, :class => 'btn btn-secondary' %>
  <%= link_to "Редактировать", edit_daily_menu_path, :class => 'btn btn-warning' %>
  <%= link_to "Удалить", daily_menu_path,
  method: :delete, data:{confirm: "Вы действительно хотите удалить это меню?"},
  :class => 'btn btn-danger' %>
</div>