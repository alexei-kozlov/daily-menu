<h1 class="text-center mb-4 text-uppercase" style="font-family: Pacifico;">- Меню -</h1>
<div class="mb-4 container d-flex flex-wrap flex-column justify-content-between align-items-start">
  <h2 class="h3 mx-auto align-self-center">(<%= l @menu.date %>)</h3>

  <% if false %>
  <ul class="mx-auto">
  <% @menu.daily_menu_items.each do |item| %>
     <li><%= item.menu_item.title %> - <%= item.menu_item.category.title %> - <%= item.price %> грн</li>
  <% end %>
  </ul>
  <% end %>

  <% if false %>
  <ul class="mx-auto">
  <% @menu.daily_menu_items.each do |item| %>
  <ul>
  <%= item.menu_item.category.title %>
     <li><%= item.menu_item.title %> - <%= item.price %> грн</li>
  </ul>
  <% end %>
  </ul>
  <% end %>

  <ul class="mx-auto">
    <% @menu.daily_menu_items.each do |item| %>
    <ul>
    <%= item.menu_item.category.title %>
       <li><%= item.menu_item.title %> - <%= item.price %> грн</li>
    </ul>
    <% end %>
  </ul>

  <% if false %>
  <% MenuItem.where(category_id: @cat.id).each do |dish| %>
    <li>
      <%= dish.title %> (<%= dish.pricing_type %>) - <%= dish.volume %> <%= dish.unit %>
    </li>
  <% end %>
  <% end %>

</div>
<div class="mx-auto text-right col-10 pr-0">
  <%= link_to "Назад", home_path, :class => 'btn btn-secondary' %>
  <%= link_to "Редактировать", edit_daily_menu_path, :class => 'btn btn-warning' %>
  <%= link_to "Удалить", daily_menu_path,
  method: :delete, data:{confirm: "Вы действительно хотите удалить это меню?"},
  :class => 'btn btn-danger' %>
</div>