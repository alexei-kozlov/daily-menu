<h1 class="text-center text-uppercase mb-0" style="font-family: Pacifico, serif;">Заказ</h1>

<div class="mb-4 container d-flex flex-wrap flex-column justify-content-between align-items-start">
  <h2 class="h4 mx-auto align-self-center mb-4"><%= l @order.total_cost %></h2>
</div>

<div class="mx-auto text-right col-10 pr-0">
  <%= link_to "Назад", orders_path, :class => 'btn btn-secondary' %>
  <%= link_to "Редактировать", edit_order_path, :class => 'btn btn-warning' %>
  <%= link_to "Удалить", order_path, method: :delete, data: { confirm: "Вы действительно хотите удалить этот заказ?" }, :class => 'btn btn-danger' %>
</div>