<h1 class="text-center mb-4" style="font-family: Pacifico, serif;">Заказ</h1>
<div class="mb-4 container d-flex flex-wrap flex-column justify-content-between align-items-start">
  <h2 class="h4 mx-auto align-self-center mb-4">от <%= l @order.created_at %></h2>
</div>
<hr>

<h3>Категория</h3>
<ul class="mx-auto pl-0 pb-4">
  <%= @order.order_items.each do |item| %>
    <li class="d-flex justify-content-between align-items-center order__form-group">
      <%= item.daily_menu_item_id %> -
      <%= item.cost %> грн
      <% if item.quantity_por %>
        за <%= item.quantity_por %> порц(-ию, -ий, -ии)
      <% else %>
        за <%= item.quantity_vol %> грамм (мл)
      <% end %>
    </li>
  <% end %>
</ul>

<hr>
<div class="d-flex justify-content-end align-items-center mb-4">
  <p class="m-0 mr-4">Общая стоимость заказа:</p>
  <%= @order.total_cost %> грн.
</div>
<div class="mx-auto text-right col-10 pr-0">
  <%= link_to "Назад", orders_path, :class => 'btn btn-secondary' %>
  <%= link_to "Редактировать", edit_order_path, :class => 'btn btn-warning' %>
  <%= link_to "Удалить", order_path, method: :delete, data: { confirm: "Вы действительно хотите удалить этот заказ?" }, :class => 'btn btn-danger' %>
</div>