<div class="container d-flex flex-wrap justify-content-between align-items-center">
  <div class="info-block col-7 d-flex flex-nowrap justify-content-between align-items-center pl-0">
    <h3 class="pl-0"><%= @dish.title %></h3>
    <p class="mb-0 border-left border-right text-right pl-1 pr-1">
      <%= @dish.price %> грн
    </p>
  </div>
  <div class="control-block col-5 d-flex flex-wrap justify-content-end align-items-center">
    <%= link_to "Редактировать", edit_menu_item_path(@dish), :class => 'btn btn-warning btn-sm m-1' %>
    <%= link_to "Удалить блюдо", menu_item_path(@dish), method: :delete, data:{confirm: "Вы действительно хотите удалить это блюдо?"}, :class => 'btn btn-danger btn-sm m-1' %>
  </div>
</div>