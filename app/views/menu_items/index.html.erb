<h1 class="text-center mb-4" style="font-family: Pacifico, Arial, sans-serif;">Блюда</h1>
<div class="container col-12 p-0 text-black text-center mb-2 bg-warning rounded">
  <%= flash.notice %>
</div>
<% @dishes.each do |dish| %>
  <div class="col-11 col-md-12 alert alert-dark d-flex flex-nowrap justify-content-between align-items-center border-bottom p-1 mx-auto">
    <div class="info-block col-md-10 col-sm-8 col-10 d-flex flex-md-row flex-column justify-content-between align-items-md-center align-items-start pl-1">
      <h3 class="col-md-5 col-12 pl-1 h4 mb-0"><%= dish.title %></h3>
      <div class="d-flex w-100 justify-content-between mt-sm-0 mt-3">
        <p class="mb-0 text-left pl-1 pr-1 col-6 col-sm-5">
          <i>"<%= link_to dish.category.title, category_path(dish.category) %>"</i>
        </p>
        <p class="mb-0 pl-1 pr-1 text-lowercase col-5">
          (<%= dish.pricing.pricing_desc %>)
        </p>
        <p class="mb-0 pl-1 pr-1 col-4">
          <%= dish.volume %> <%= dish.unit.unit_desc %>
        </p>
      </div>
    </div>
    <div class="control-block col-2 d-flex flex-nowrap justify-content-end align-items-sm-center align-self-start pr-0">
      <%= link_to content_tag('i, class="fas fa-info"'),
                  menu_item_path(dish), :class => 'btn btn-primary btn-sm m-1' %>
      <%= link_to content_tag('i, class="fas fa-pen"'),
                  edit_menu_item_path(dish), :class => 'btn btn-warning btn-sm m-1' %>
      <%= link_to content_tag('i, class="fas fa-trash"'),
                  menu_item_path(dish), method: :delete, data: { confirm: "Вы действительно хотите удалить это блюдо?" }, :class => 'btn btn-danger btn-sm m-1' %>
    </div>
  </div>
<% end %>
<div class="col-11 col-md-12 mx-auto text-right pr-0">
  <%= link_to "Добавить блюдо", new_menu_item_path, :class => 'btn btn-success' %>
</div>