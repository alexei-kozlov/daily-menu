<h1 class="text-center text-uppercase mb-4" style="font-family: Pacifico;">- Меню -</h1>
<% @dishes.each do |dish| %>
  <div class="alert alert-dark d-flex flex-wrap justify-content-between align-items-center border-bottom p-0">
    <div class="info-block col-8 d-flex flex-wrap justify-content-between align-items-center pl-1">
      <h3 class="h4 pl-10 text-wrap" style="width: 40%;"><%= dish.title %></h2>
      <p class="flex-wrap mb-0 border-left border-right text-center pl-1 pr-1">
        <i>"<%= link_to Category.find(dish.category_id).title, category_path(dish.category_id) %>"</i>
      </p>
      <p class="flex-wrap mb-0 border-left border-right text-center pl-1 pr-1">
        <%= dish.price %> грн
      </p>
      <p class="flex-wrap mb-0 border-left border-right text-center pl-1 pr-1 text-lowercase">
        <%= Pricing.find(dish.pricing_id).pricing_type %>
      </p>
    </div>
    <div class="control-block col-4 d-flex flex-nowrap justify-content-end align-items-center pr-0">
      <%= link_to content_tag('i, class="fas fa-info"'),
          menu_item_path(dish), :class => 'btn btn-primary btn-sm m-1' %>
      <%= link_to content_tag('i, class="fas fa-pen"'),
          edit_menu_item_path(dish), :class => 'btn btn-warning btn-sm m-1' %>
      <%= link_to content_tag('i, class="fas fa-trash"'),
          menu_item_path(dish), method: :delete, data:{confirm: "Вы действительно хотите удалить это блюдо?"}, :class => 'btn btn-danger btn-sm m-1' %>
    </div>
  </div>
<% end %>