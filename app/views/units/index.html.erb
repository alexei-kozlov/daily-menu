<h1 class="text-center mb-4" style="font-family: Pacifico;">Единицы измерения</h1>
<% @units.each do |unit| %>
  <div class="container col-8 p-0 alert alert-secondary d-flex flex-wrap justify-content-between align-items-center">
    <p class="info-block col-6 m-0">
      <b>Единицы измерения:</b>
      <span class="text-lowercase"><%= unit.unit_type %></span>
    </p>
    <div class="control-block col-6 d-flex flex-nowrap justify-content-end align-items-center p-0">
      <%= link_to content_tag('i, class="fas fa-info"'),
      unit_path(unit), :class => 'btn btn-primary m-1' %>
    </div>
  </div>
<% end %>
<div class="container col-8 p-0 mx-auto text-right">
  <%= link_to "Добавить единицы измерения", new_unit_path, :class => 'btn btn-success' %>
</div>



