<h1 class="text-center mb-4" style="font-family: Pacifico;">Категории</h1>
<div class="container col-12 p-0 text-danger text-center mb-2">
  <%= flash.notice %>
</div>
<% @cats.each do |cat| %>
  <div class="container alert alert-secondary col-10 d-flex flex-wrap justify-content-between align-items-center">
    <h2 class="h3 info-block col-6 pl-0"><%= cat.title %></h2>
    <div class="control-block col-6 d-flex flex-nowrap justify-content-end align-items-center p-0">
      <%= link_to content_tag('i, class="fas fa-info"'),
          category_path(cat), :class => 'btn btn-primary m-1' %>
      <%= link_to content_tag('i, class="fas fa-pen"'),
          edit_category_path(cat), :class => 'btn btn-warning m-1' %>
      <%= link_to content_tag('i, class="fas fa-trash"'),
          category_path(cat), method: :delete, data:{confirm: "Вы действительно хотите удалить эту категорию?"},
          :class => 'btn btn-danger m-1' %>
    </div>
    <!--
    <ul>
      <% MenuItem.where(category_id: cat.id).each do |dish| %>
        <li>
          <%= dish.title %> (<%= dish.pricing_type %>) - <%= dish.volume %> <%= dish.unit %>
        </li>
      <% end %>
    </ul>
    -->
  </div>
<% end %>
<div class="mx-auto text-right col-10 pr-0">
  <%= link_to "Создать категорию", new_category_path, :class => 'btn btn-success' %>
</div>




